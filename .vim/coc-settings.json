{
  "java.enabled": false,
  "rust-analyzer.procMacro.attributes.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "reason": {
      "enable": true,
      "command": "~/.vim/plugged/vim-reason-plus/rls-macos/reason-language-server",
      "filetypes": [
        "reason"
      ],
      "settings": {
        "reason_language_server": {
          "format_width": 100
        }
      }
    },
    "rescript": {
      "enable": true,
      "module": "~/.vim/plugged/vim-rescript/server/out/server.js",
      "args": [
        "--node-ipc"
      ],
      "filetypes": [
        "rescript"
      ],
      "rootPatterns": [
        "bsconfig.json"
      ]
    }
  }
}
